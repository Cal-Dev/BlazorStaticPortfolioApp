@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col">
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <a href="/" class="text-xl font-bold">Your Name</a>
                <div class="hidden md:flex space-x-6">
                    <a href="/" class="hover:text-blue-600">Home</a>
                    <a href="/about" class="hover:text-blue-600">About</a>
                    <a href="/projects" class="hover:text-blue-600">Projects</a>
                    <a href="/contact" class="hover:text-blue-600">Contact</a>
                </div>
                <button class="md:hidden" @onclick="ToggleMobileMenu">
                    <span class="sr-only">Open menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
            @if (showMobileMenu)
            {
                        <div class="md:hidden mt-4 space-y-2">
                            <a href="/" class="block hover:text-blue-600">Home</a>
                            <a href="/about" class="block hover:text-blue-600">About</a>
                            <a href="/projects" class="block hover:text-blue-600">Projects</a>
                            <a href="/contact" class="block hover:text-blue-600">Contact</a>
                        </div>
            }
        </nav>
    </header>

    <main class="flex-grow">
        @Body
    </main>

    <footer class="bg-gray-100 py-6">
        <div class="container mx-auto px-4 text-center text-gray-600">
            <p>&copy; @DateTime.Now.Year - Your Name. All rights reserved.</p>
        </div>
    </footer>
</div>

@code {
    private bool showMobileMenu = false;

    private void ToggleMobileMenu()
    {
        showMobileMenu = !showMobileMenu;
    }
}